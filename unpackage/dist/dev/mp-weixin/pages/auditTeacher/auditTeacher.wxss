.uni-forms-item {
  position: relative;
  display: flex;
  margin-bottom: 22px;
  flex-direction: row;
}
.uni-forms-item__label {
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: left;
  font-size: 14px;
  color: #606266;
  height: 36px;
  padding: 0 12px 0 0;
  vertical-align: middle;
  flex-shrink: 0;
  box-sizing: border-box;
}
